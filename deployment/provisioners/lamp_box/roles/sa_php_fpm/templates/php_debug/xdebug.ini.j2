; configuration for php xdebug module
zend_extension = "{{item.php_module_path}}/xdebug.so"
xdebug.remote_enable = {{xdebug_remote_enable | default(1)}}
xdebug.remote_connect_back= {{xdebug_remote_connect_back | default(0) }}
xdebug.remote_host= {{xdebug_remote_host | default('127.0.0.1')}}  # ignored/disabled, if above set to 1
xdebug.remote_autostart = 1
xdebug.remote_port = 9000
xdebug.remote_handler = "dbgp"
xdebug.profiler_enable = 0
xdebug.profiler_enable_trigger = 1
